<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.SeedToWealth.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Icon Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/iconContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/cropIconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="W"
                android:textColor="@color/primary"
                android:textSize="24sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Crop Name and Status -->
        <TextView
            android:id="@+id/cropTypeText"
            style="@style/TextAppearance.SeedToWealth.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wheat"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Growing"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white_text"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/cropTypeText"
            app:layout_constraintTop_toTopOf="@id/cropTypeText"
            app:layout_constraintBottom_toBottomOf="@id/cropTypeText" />

        <!-- Area Text -->
        <TextView
            android:id="@+id/areaText"
            style="@style/TextAppearance.SeedToWealth.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.5 acres"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/cropTypeText"
            app:layout_constraintTop_toBottomOf="@id/cropTypeText"
            android:layout_marginTop="4dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/growthProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:progress="45"
            android:progressDrawable="@drawable/bg_rounded_status" 
            app:layout_constraintStart_toStartOf="@id/cropTypeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/areaText" />

        <!-- Timer/Action Text -->
        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h 45m remaining"
            android:textSize="12sp"
            android:textColor="@color/warning"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/growthProgressBar"
            app:layout_constraintTop_toBottomOf="@id/growthProgressBar"
            android:layout_marginTop="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
