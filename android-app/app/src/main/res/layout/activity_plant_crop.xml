<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant New Crop"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/currentSavingsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Savings: Loading..."
                    android:textSize="18sp"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp"
                    android:background="#E8F5E9" />

                <TextView
                    android:id="@+id/weatherImpactText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading weather..."
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="#FFA000"
                    android:layout_marginBottom="20dp" />

                <!-- Crop Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop Type"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/cropTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- Area -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area (acres)"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/areaInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., 0.5"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- Investment -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investment Amount (â‚¹)"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/investmentInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., 5000"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- Expected Yield -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expected Yield"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/expectedYieldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Will be calculated"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="24dp" />

                <!-- Plant Button -->
                <Button
                    android:id="@+id/plantButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plant Crop"
                    android:textSize="16sp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:minHeight="56dp" />

                <!-- Loading Progress -->
                <ProgressBar
                    android:id="@+id/loadingProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
